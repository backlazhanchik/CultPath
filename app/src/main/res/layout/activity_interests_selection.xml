<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".InterestsSelectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выберите свои интересы"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Не менее 1 и не более 3"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <CheckBox
            android:id="@+id/cbArt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Искусство"
            android:textSize="16sp"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/cbHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="История"
            android:textSize="16sp"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/cbScience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Научные изобретения"
            android:textSize="16sp"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/cbCrafts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ремесла"
            android:textSize="16sp"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/cbFolklore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Фольклор"
            android:textSize="16sp"
            android:padding="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дальше"
            android:textAllCaps="false"
            android:padding="12dp"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>
